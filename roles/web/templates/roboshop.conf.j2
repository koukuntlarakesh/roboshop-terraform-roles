proxy_http_version 1.1;
location /images/ {
  expires 5s;
  root   /usr/share/nginx/html;
  try_files $uri /images/placeholder.jpg;
}
location /api/catalogue/ { proxy_pass http://{{CATALOGUE_HOST}}:80/; }
location /api/user/ { proxy_pass http://{{USER_HOST}}:80/; }
location /api/cart/ { proxy_pass http://{{CART_HOST}}:80/; }
location /api/shipping/ { proxy_pass http://{{SHIPPING_HOST}}:80/; }
location /api/payment/ { proxy_pass http://{{PAYMENT_HOST}}:80/; }

location /health {
  stub_status on;
  access_log off;
}